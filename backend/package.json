{
    "main": "js/bindings.js",
    "private": true,
    "dependencies": {
        "bindings": "^1.5.0",
        "node-addon-api": "^1.1.0"
    },
    "binary": {
        "napi_versions": [
            7
        ]
    },
    "types": "types/index.d.ts",
    "scripts": {
        "build:node": "node -e \"require('child_process').spawn(process.platform === 'win32' ? '.\\\\scripts\\\\make.bat' : 'node', process.platform === 'win32' ? [] : ['./scripts/build-napi.js'], {stdio: 'inherit', shell: true})\"",
        "build:node:debug": "node -e \"require('child_process').spawn(process.platform === 'win32' ? '.\\\\scripts\\\\make.bat --debug' : 'node', process.platform === 'win32' ? [] : ['./scripts/build-napi.js', '--debug'], {stdio: 'inherit', shell: true})\"",
        "build:debug": "npm run build:node:debug && node custom_build.mjs && npm pack",
        "build:release": "npm run build:node && node custom_build.mjs && npm pack",
        "build:release-fast": "node ./scripts/build-napi.js --fast && node custom_build.mjs && npm pack",
        "format": "clang-format -i include/**.hpp && clang-format -i include/**.h && clang-format -i src/**.cpp"
    },
    "cmake-js": {
        "runtime": "electron"
    },
    "files": [
        "build/{Release,Debug}/**/*.{node,dylib,dll,so}",
        "js/bindings.js",
        "types/index.d.ts"
    ],
    "gypfile": true,
    "name": "trackaudio-afv",
    "version": "1.0.0",
    "description": "AFV bindings for trackaudio",
    "author": "Pierre Ferran",
    "license": "GPL-3.0-only",
    "engines": {
        "node": ">=20.0.0 <=21.0.0"
    }
}
